# Caddyfile for pinseekr.golf - Cloudflare Tunnel deployment
# Serves React PWA on HTTP (Cloudflare handles TLS)

:80 {
    # Serve React app from /srv
    root * /srv
    
    # Serve asset requests directly and return 404 when missing
    @asset {
        path /assets/* *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot *.json *.webmanifest /favicon-*.png /apple-touch-icon.png
    }
    handle @asset {
        try_files {path}
        header {
            Cache-Control "max-age=31536000, immutable"
            Vary "Accept-Encoding"
            Access-Control-Allow-Origin "*"
        }
        file_server {
            precompressed gzip
        }
    }

    # SPA routing - fallback to index.html for client-side routes (non-asset requests)
    @spa {
        not path /assets/* *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot *.json *.webmanifest /favicon-*.png /apple-touch-icon.png
    }
    try_files {path} /index.html
    
    # Don't cache HTML files (for PWA updates)
    @html {
        path *.html /
    }
    header @html {
        Cache-Control "no-cache, no-store, must-revalidate"
        Pragma "no-cache"
        Expires "0"
    }
    
    # PWA and security headers
    header {
        # PWA requirements
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Service Worker support
        Service-Worker-Allowed "/"
    }
    
    # Compress responses
    encode {
        gzip 6
        minimum_length 1000
    }
    
    # Serve files
    file_server {
        precompressed gzip
    }
}